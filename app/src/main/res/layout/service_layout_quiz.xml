<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/body_padding"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/body_padding"
                android:paddingLeft="@dimen/body_padding"
                android:paddingRight="@dimen/body_padding"
                android:gravity="start">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_word"
                    style="@style/Components.Text.Large"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/sample_word_class"
                    android:textStyle="italic"
                    style="@style/Components.Text"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/body_padding">

            <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/body_padding"
                    android:background="@color/colorAccent" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="@dimen/body_padding"
                    android:text="@string/sample_word_example"
                    android:textColor="@color/colorTextHint"
                    android:gravity="start"
                    style="@style/Components.Text"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>